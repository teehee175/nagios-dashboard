# Nagios Dashboard Configuration
# Copy this file to .env and adjust values as needed

# React app host configuration (development only)
VITE_APP_HOST=localhost
VITE_APP_PORT=5173

# Nagios Server Configuration
# Default assumes dashboard runs on same server as Nagios
VITE_NAGIOS_BASE_URL=http://localhost/nagios

# Nagios API endpoint
VITE_NAGIOS_STATUS_API=/cgi-bin/status.cgi?host=all&sorttype=2&sortoption=3&limit=0

# Basic Auth credentials (base64 encoded username:password)
# Generate with: echo -n "username:password" | base64
# VITE_NAGIOS_AUTH=YOUR_BASE64_CREDENTIALS_HERE

# Auto-refresh interval in seconds (default: 90)
VITE_REFRESH_INTERVAL=90
